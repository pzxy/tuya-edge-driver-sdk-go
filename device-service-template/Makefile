.PHONY: build test clean prepare update docker

GO=CGO_ENABLED=0 GO111MODULE=on go

MICROSERVICES=cmd/device-service-template

.PHONY: $(MICROSERVICES)

DOCKERS=docker_device_service_template
.PHONY: $(DOCKERS)

VERSION=$(shell cat ./VERSION 2>/dev/null || echo 0.0.0)

GIT_SHA=$(shell git rev-parse HEAD)
# todo
GOFLAGS=-ldflags "-X device-service-template.Version=$(VERSION)"

build: $(MICROSERVICES)
	$(GO) build ./...

cmd/device-service-template:
	$(GO) build $(GOFLAGS) -o $@ ./cmd

test:
	$(GO) test ./... -coverprofile=coverage.out
	$(GO) vet ./...
	gofmt -l .
	[ "`gofmt -l .`" = "" ]
	./bin/test-attribution-txt.sh
	./bin/test-go-mod-tidy.sh

clean:
	rm -f $(MICROSERVICES)

docker: $(DOCKERS)

docker_device_service_template:
	docker build \
		--label "git_sha=$(GIT_SHA)" \
		-t device-service-template:$(VERSION)-dev \
		.
